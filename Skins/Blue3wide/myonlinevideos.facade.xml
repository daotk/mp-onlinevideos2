<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <controls>
    <control>
      <description>group element</description>
      <type>group</type>
      <visible>!Control.HasFocus(50)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="slide" time="150" start="0,-300">WindowOpen</animation>
      <animation effect="slide" time="250" end="800,0">WindowClose</animation>
      <animation effect="rotatey" start="20" end="0" center="525,0" tween="back" ease="easeout" time="300" reversible="false">hidden</animation>
      <animation effect="rotatey" start="0" end="20" center="525,0" tween="back" ease="easeout" time="300" reversible="false">visible</animation>
      <control>
        <description>composite control consisting of a list control and a thumbnail panel</description>
        <type>facadeview</type>
        <id>50</id>
        <control>
          <description>listcontrol</description>
          <type>listcontrol</type>
          <id>50</id>
          <posX>80</posX>
          <width>1120</width>
          <posY>90</posY>
          <height>520</height>
          <onleft>2</onleft>
          <onright>2</onright>
          <spinPosX>1180</spinPosX>
          <spinPoxY>670</spinPoxY>
          <scrollOffset>2</scrollOffset>
        </control>
        <control>
          <description>Thumbnail Panel</description>
          <type>thumbnailpanel</type>
          <id>50</id>
          <posX>80</posX>
          <width>1120</width>
          <posY>90</posY>
          <height>540</height>
          <scrollOffset>1</scrollOffset>
          <onleft>2</onleft>
          <onright>50</onright>
          <imageFolder>Picture_cover.png</imageFolder>
          <imageFolderFocus>OnlineVideos/Picture_cover_focused.png</imageFolderFocus>
          
          <!-- smallicons -->
          <itemWidth>159</itemWidth>
          <itemHeight>118</itemHeight>
          <textureWidth>155</textureWidth>
          <textureHeight>116</textureHeight>
          <thumbWidth>143</thumbWidth>
          <thumbHeight>104</thumbHeight>
          <thumbPosX>7</thumbPosX>
          <thumbPosY>6</thumbPosY>          
          
          <!-- largeicons -->
          <itemWidthBig>224</itemWidthBig>
          <itemHeightBig>158</itemHeightBig>
          <textureWidthBig>217</textureWidthBig>
          <textureHeightBig>156</textureHeightBig>
          <thumbWidthBig>201</thumbWidthBig>
          <thumbHeightBig>148</thumbHeightBig>
          <thumbPosXBig>7</thumbPosXBig>
          <thumbPosYBig>2</thumbPosYBig>

          <spinCanFocus>no</spinCanFocus>          
          <spinPosX>1180</spinPosX>
          <spinPoxY>680</spinPoxY>

          <thumbZoom>no</thumbZoom>
          <enableFocusZoom>no</enableFocusZoom>          
          <hideUnfocusTexture>no</hideUnfocusTexture>          
          <renderFocusText>no</renderFocusText>
          <renderUnfocusText>no</renderUnfocusText>
        </control>        
      </control>
    </control>
  </controls>
</window>