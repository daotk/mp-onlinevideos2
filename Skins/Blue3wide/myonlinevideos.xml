<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>4755</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <define>#header.label</define>
  <define>#header.image</define>
  <controls>
    
    <!-- *** WINDOW DEFAULTS *** -->
    
    <control>
      <description>BG</description>
      <type>image</type>
      <id>1</id>
      <width>1280</width>
      <height>720</height>
    </control>
    <control>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <type>image</type>
      <id>1</id>
      <posX>80</posX>
      <posY>12</posY>
      <width>210</width>
      <height>70</height>
      <texture>#header.image</texture>
    </control>
    <control>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <type>label</type>
      <id>1</id>
      <posX>300</posX>
      <posY>25</posY>
      <width>700</width>
      <label>#header.label</label>
      <font>font15</font>
      <textcolor>ffa9d0f7</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Date</description>
      <type>label</type>
      <id>0</id>
      <posX>1200</posX>
      <posY>15</posY>
      <label>#date</label>
      <align>right</align>
      <font>font13</font>
      <textcolor>ffa9d0f7</textcolor>
      <background>Backslide.png</background>      
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Time</description>
      <type>label</type>
      <id>0</id>
      <posX>1200</posX>
      <posY>40</posY>
      <label>#time</label>
      <align>right</align>
      <font>font13</font>
      <textcolor>ffa9d0f7</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    
    <import>myonlinevideos.details.xml</import>
    <import>myonlinevideos.facade.xml</import>
    
    <!-- *** Bottom part *** -->
    
    <control>
      <description>video rectangle</description>
      <type>image</type>
      <id>0</id>
      <posX>80</posX>
      <posY>576</posY>
      <width>219</width>
      <height>124</height>
      <texture>Picture_cover.png</texture>
      <visible>!Control.IsVisible(51)</visible>
      <animation effect="fade" time="250">visiblechange</animation>      
    </control>
    <control>
      <description>video preview window</description>
      <type>videowindow</type>
      <id>0</id>
      <posX>86</posX>
      <posY>580</posY>
      <width>203</width>
      <height>115</height>
      <keepaspectratio>yes</keepaspectratio>
      <centered>yes</centered>
      <action>18</action>
      <textureFocus>tv_green_border.png</textureFocus>
      <animation effect="fade" time="250">visiblechange</animation>
      <visible>player.hasmedia</visible>
    </control>
    <control>
      <id>500</id>
      <type>image</type>
      <posX>86</posX>
      <posY>580</posY>
      <width>203</width>
      <height>115</height>
      <centered>yes</centered>
      <texture diffuse="Thumb_Mask.png">#selectedthumb</texture>
      <keepaspectratio>yes</keepaspectratio>
      <visible>!player.hasmedia + !Control.IsVisible(51)</visible>
      <animation effect="fade" time="250" reversible="false">visible</animation>
    </control>
    <control>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <description>Selected item Label</description>
      <type>fadelabel</type>
      <id>1</id>
      <posX>300</posX>
      <posY>560</posY>
      <width>880</width>
      <label>#selecteditem</label>
      <font>font11</font>
      <textcolor>White</textcolor>
      <visible>!Control.IsVisible(51)</visible>
    </control>    
    <control>
      <description>Length Label</description>
      <type>label</type>
      <id>0</id>
      <posX>300</posX>
      <posY>590</posY>
      <width>120</width>
      <font>font10</font>
      <label>299</label>
      <textcolor>White</textcolor>
      <visible>!Control.IsVisible(51)+control.hastext(501)</visible>
    </control>
    <control>
      <description>Length</description>
      <type>label</type>
      <id>501</id>
      <posX>420</posX>
      <posY>590</posY>
      <width>780</width>
      <font>font10</font>
      <label>#OnlineVideos.length</label>
      <textcolor>White</textcolor>
      <visible>!Control.IsVisible(51)</visible>
    </control>
    <control>
      <description>Description</description>
      <type>textboxscrollup</type>
      <id>0</id>
      <posX>300</posX>
      <posY>615</posY>
      <width>780</width>
      <height>105</height>
      <colordiffuse>ffffffff</colordiffuse>
      <font>font10</font>
      <label>#OnlineVideos.desc</label>
      <textcolor>White</textcolor>
      <visible>!Control.IsVisible(51)</visible>
    </control>
    
    <!-- *** HIDDEN MENU *** -->

    <control>
      <type>actiongroup</type>
      <description>action menu</description>
      <onexit>50</onexit>
      <buttonX>0</buttonX>
      <buttonY>0</buttonY>
      <textureFocus>Action_focus.png</textureFocus>
      <textureNoFocus>Action_nofocus.png</textureNoFocus>
      <dimColor>00ffffff</dimColor>
      <control>
        <type>image</type>
        <posX>20</posX>
        <posY>78</posY>
        <width>340</width>
        <height>485</height>
        <texture>Backslide.png</texture>
        <colorDiffuse>fffffffff</colorDiffuse>
        <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="250" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="250" end="-300,0" reversible="false">hidden</animation>
      </control>
      <control>
        <description>button group</description>
        <type>group</type>        
        <animation effect="slide" time="250" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="250" end="-300,0" reversible="false">hidden</animation>
        <posX>50</posX>
        <posY>110</posY>
        <layout>StackLayout</layout>
        <visible>!Control.HasFocus(50)</visible>
        <control>
          <description>View-As</description>
          <type>button</type>
          <id>2</id>
          <label>101</label>          
          <onright>50</onright>
          <onup>17</onup>
          <font>font11</font>
          <height>40</height>
          <textYOff>3</textYOff>
        </control>
        <control>
          <type>button</type>
          <description>Search</description>
          <id>10</id>
          <onright>50</onright>
          <onup>2</onup>
          <label>137</label>
          <visible>no</visible>
          <font>font11</font>
          <height>40</height>
          <textYOff>3</textYOff>
        </control>
        <control>
          <description>select category</description>
          <type>selectbutton</type>
          <id>9</id>
          <onright>50</onright>
          <onup>10</onup>
          <label>2053</label>
          <visible>no</visible>
          <font>font11</font>
          <height>40</height>
          <textYOff>3</textYOff>
        </control>        
        <control>
          <type>selectbutton</type>
          <description>Max Results</description>
          <id>5</id>
          <onright>50</onright>
          <onup>9</onup>
          <label>Max Results</label>
          <visible>no</visible>
          <font>font11</font>
          <height>40</height>
          <textYOff>3</textYOff>
        </control>
        <control>
          <type>selectbutton</type>
          <description>Order By</description>
          <id>6</id>
          <onright>50</onright>
          <onup>5</onup>
          <label>495</label>
          <visible>no</visible>
          <font>font11</font>
          <height>40</height>
          <textYOff>3</textYOff>
        </control>
        <control>
          <type>selectbutton</type>
          <description>TimeFrame button</description>
          <id>7</id>
          <onright>50</onright>
          <onup>6</onup>
          <label>Timeframe</label>
          <visible>no</visible>
          <font>font11</font>
          <height>40</height>
          <textYOff>3</textYOff>
        </control>
        <control>
          <type>button</type>
          <description>Update button</description>
          <id>8</id>
          <onright>50</onright>
          <onup>7</onup>
          <label>184</label>
          <visible>no</visible>
          <font>font11</font>
          <height>40</height>
          <textYOff>3</textYOff>
        </control>
        <control>
          <type>button</type>
          <description>Next Page</description>
          <id>3</id>
          <onright>50</onright>
          <onup>8</onup>
          <label>1975</label>
          <animation effect="fade" time="200">WindowOpen</animation>
          <animation effect="fade" time="200">WindowClose</animation>
          <visible>no</visible>
          <font>font11</font>
          <height>40</height>
          <textYOff>3</textYOff>
        </control>
        <control>
          <type>button</type>
          <description>Previous Page</description>
          <id>4</id>
          <onright>50</onright>
          <onup>3</onup>
          <label>30004</label>
          <animation effect="fade" time="200">WindowOpen</animation>
          <animation effect="fade" time="200">WindowClose</animation>
          <visible>no</visible>
          <font>font11</font>
          <height>40</height>
          <textYOff>3</textYOff>
        </control>
        <control>
          <type>button</type>
          <description>Favorites</description>
          <id>11</id>
          <onright>50</onright>
          <onup>4</onup>
          <label>932</label>
          <visible>no</visible>
          <font>font11</font>
          <height>40</height>
          <textYOff>3</textYOff>
        </control>
        <control>
          <type>button</type>
          <description>Do Age Check</description>
          <id>12</id>
          <onright>50</onright>
          <onup>11</onup>
          <ondown>2</ondown>
          <label>Enter Pin</label>
          <visible>no</visible>
          <font>font11</font>
          <height>40</height>
          <textYOff>3</textYOff>
        </control>
      </control>
    </control>    
  </controls>
</window>