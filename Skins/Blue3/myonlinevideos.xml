<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>4755</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <define>#header.label</define>
  <define>#header.hover</define>
  <controls>

    <!-- *** WINDOW DEFAULTS *** -->
    
    <control>
      <description>BG</description>
      <type>image</type>
      <id>1</id>
      <width>720</width>
      <height>576</height>
    </control>
    <control>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <type>image</type>
      <id>1</id>
      <posX>60</posX>
      <posY>10</posY>
      <width>162</width>
      <height>54</height>
      <texture>#header.image</texture>
    </control>
    <control>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <type>label</type>
      <id>1</id>
      <posX>220</posX>
      <posY>25</posY>
      <width>400</width>
      <label>#header.label</label>
      <font>font16</font>      
      <textcolor>White</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>    
    <control>
      <description>Filter</description>
      <type>label</type>
      <id>1</id>      
      <posX>220</posX>
      <posY>50</posY>
      <width>700</width>
      <label>#OnlineVideos.filter</label>
      <font>font10</font>
      <textcolor>ffa9d0f7</textcolor>      
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>    
    <control>
      <description>Date</description>
      <type>label</type>
      <id>0</id>
      <posX>670</posX>
      <posY>10</posY>
      <label>#date</label>
      <align>right</align>
      <font>font14</font>
      <textcolor>ffa9d0f7</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Time</description>
      <type>label</type>
      <id>0</id>
      <posX>670</posX>
      <posY>28</posY>
      <label>#time</label>
      <align>right</align>
      <font>font14</font>
      <textcolor>ffa9d0f7</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>    
    
    <import>myonlinevideos.details.xml</import>
    <import>myonlinevideos.facade.xml</import>

    <!-- *** Bottom part *** -->

    <control>
      <description>video rectangle</description>
      <type>image</type>
      <id>0</id>
      <posX>43</posX>
      <posY>442</posY>
      <width>123</width>
      <height>99</height>
      <texture>Picture_cover.png</texture>
      <visible>!Control.IsVisible(51)</visible>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="fade" time="250">WindowOpen</animation>
    </control>
    <control>
      <description>video preview window</description>
      <type>videowindow</type>
      <id>99</id>
      <posX>48</posX>
      <posY>446</posY>
      <width>114</width>
      <height>92</height>
      <keepaspectratio>yes</keepaspectratio>
      <centered>yes</centered>
      <action>18</action>
      <textureFocus>tv_green_border.png</textureFocus>
      <visible>player.hasmedia | videoplayer.usingoverlays</visible>
      <animation effect="fade" time="250">visiblechange</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="fade" time="250">WindowOpen</animation>
    </control>
    <control>
      <id>500</id>
      <type>image</type>
      <posX>48</posX>
      <posY>446</posY>
      <width>114</width>
      <height>92</height>
      <centered>yes</centered>
      <texture diffuse="Thumb_Mask.png">#selectedthumb</texture>
      <keepaspectratio>yes</keepaspectratio>
      <visible>!videoplayer.usingoverlays + !player.hasmedia + !Control.IsVisible(51)</visible>
      <animation effect="fade" time="250" reversible="false">visible</animation>
    </control>  
     
    <control>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <description>Selected item Label</description>
      <type>fadelabel</type>
      <id>1</id>
      <posX>180</posX>
      <posY>415</posY>
      <width>460</width>
      <label>#selecteditem</label>
      <font>font14</font>
      <textcolor>White</textcolor>
      <visible>!Control.IsVisible(51)</visible>
    </control>
    <control>
      <description>Length Label</description>
      <type>label</type>
      <id>0</id>
      <posX>180</posX>
      <posY>435</posY>
      <width>80</width>
      <font>font12</font>
      <label>#OnlineVideos.Translation.Runtime.Label:</label>
      <textcolor>ffa9d0f7</textcolor>
      <visible>string.equals(#OnlineVideos.state, videos)+control.hastext(502)</visible>
    </control>    
    <control>
      <description>Language Label</description>
      <type>label</type>
      <id>0</id>
      <posX>180</posX>
      <posY>435</posY>
      <width>80</width>
      <font>font12</font>
      <label>248</label>
      <textcolor>ffa9d0f7</textcolor>
      <visible>string.equals(#OnlineVideos.state, sites)+control.hastext(502)</visible>
    </control>
    <control>
      <description>Videos Label</description>
      <type>label</type>
      <id>0</id>
      <posX>180</posX>
      <posY>435</posY>
      <width>80</width>
      <font>font12</font>
      <label>#OnlineVideos.Translation.Videos.Label:</label>
      <textcolor>ffa9d0f7</textcolor>
      <visible>string.equals(#OnlineVideos.state, categories)+control.hastext(502)</visible>
    </control> 
    <control>
      <description>Sites Label</description>
      <type>label</type>
      <id>0</id>
      <posX>180</posX>
      <posY>435</posY>
      <width>80</width>
      <font>font12</font>
      <label>#OnlineVideos.Translation.Sites.Label:</label>
      <textcolor>ffa9d0f7</textcolor>
      <visible>string.equals(#OnlineVideos.state, groups)+control.hastext(502)</visible>
    </control>    
    <control>
      <description>language of site | number of sites in group | number of videos in category | length of video</description>
      <type>label</type>
      <id>502</id>
      <posX>290</posX>
      <posY>435</posY>
      <width>370</width>
      <font>font12</font>
      <label>#selecteditem2</label>
      <textcolor>ffa9d0f7</textcolor>
      <visible>!string.equals(#OnlineVideos.state, details)</visible>
    </control>
    <control>
      <description>Description</description>
      <type>textboxscrollup</type>
      <id>0</id>
      <posX>180</posX>
      <posY>450</posY>
      <width>440</width>
      <height>126</height>
      <colordiffuse>ffffffff</colordiffuse>      
      <label>#OnlineVideos.desc</label>
      <textcolor>White</textcolor>
      <visible>!string.equals(#OnlineVideos.state, details)</visible>
    </control>
    
    <control>
      <description>Buffering Label</description>
      <type>label</type>
      <id>0</id>
      <posX>660</posX>
      <posY>455</posY>
      <label>#OnlineVideos.buffered % #OnlineVideos.Translation.Buffered.Label</label>
      <align>right</align>
      <textcolor>White</textcolor>
      <font>font10</font>
      <visible>string.equals(#OnlineVideos.IsBuffering, true) + !player.hasmedia</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    
    <control>
      <description>Label for Current, Total Amount and Localized Type of items</description>
      <type>label</type>
      <id>0</id>
      <posX>660</posX>
      <posY>435</posY>
      <label>#selectedindex/#itemcount #itemtype</label>
      <align>right</align>
      <textcolor>White</textcolor>
      <font>font10</font>
      <visible>string.equals(#selectedindex)+!string.equals(#OnlineVideos.state, details)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Label for Total Amount and Localized Type of items</description>
      <type>label</type>
      <id>0</id>
      <posX>660</posX>
      <posY>435</posY>
      <label>#itemcount #itemtype</label>
      <align>right</align>
      <textcolor>White</textcolor>
      <font>font10</font>
      <visible>!string.equals(#selectedindex)+!string.equals(#OnlineVideos.state, details)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    
    <!-- *** HIDDEN MENU *** -->
    
    <control>
      <type>actiongroup</type>
      <description>action menu</description>
      <onexit>50</onexit>
      <buttonX>0</buttonX>
      <buttonY>0</buttonY>
      <textureFocus>Action_focus.png</textureFocus>
      <textureNoFocus>Action_nofocus.png</textureNoFocus>
      <dimColor>00ffffff</dimColor>
      <control>
        <type>image</type>
        <posX>15</posX>
        <posY>63</posY>
        <width>255</width>
        <height>356</height>
        <texture>Backslide.png</texture>
        <colorDiffuse>fffffffff</colorDiffuse>
        <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
      </control>
      <control>
        <description>button group</description>
        <type>group</type>
        <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
        <posX>40</posX>
        <posY>80</posY>
        <layout>StackLayout</layout>
        <visible>!Control.HasFocus(50)</visible>
        <control>
          <description>View-As</description>
          <type>button</type>
          <id>2</id>
          <label>#OnlineVideos.Translation.LayoutList.Label</label>  
          <height>28</height>
          <onright>50</onright>
          <onup>17</onup>          
        </control>
        <control>
          <type>button</type>
          <description>Search</description>
          <id>10</id>
          <onright>50</onright>
          <onup>2</onup>
          <label>#OnlineVideos.Translation.Search.Label</label>
          <height>28</height>
        </control>
        <control>
          <description>select category</description>
          <type>selectbutton</type>
          <id>9</id>
          <onright>50</onright>
          <onup>10</onup>
          <label>#OnlineVideos.Translation.Category.Label</label>
          <height>28</height>
        </control>               
        <control>
          <type>selectbutton</type>
          <description>Max Results</description>
          <id>5</id>
          <onright>50</onright>
          <onup>9</onup>
          <label>#OnlineVideos.Translation.MaxResults.Label</label>
          <height>28</height>
        </control>
        <control>
          <type>selectbutton</type>
          <description>Order By</description>
          <id>6</id>
          <onright>50</onright>
          <onup>5</onup>
          <label>#OnlineVideos.Translation.SortOptions.Label</label>
          <height>28</height>
        </control>
        <control>
          <type>selectbutton</type>
          <description>TimeFrame button</description>
          <id>7</id>
          <onright>50</onright>
          <onup>6</onup>
          <label>#OnlineVideos.Translation.Timeframe.Label</label>
          <height>28</height>
        </control>
        <control>
          <type>button</type>
          <description>Update button</description>
          <id>8</id>
          <onright>50</onright>
          <onup>7</onup>
          <label>#OnlineVideos.Translation.Refresh.Label</label>
          <height>28</height>
        </control>
        <control>
          <type>button</type>
          <description>Do Age Check</description>
          <id>12</id>
          <onright>50</onright>
          <onup>8</onup>          
          <label>#OnlineVideos.Translation.EnterPin.Label</label>
          <height>28</height>
        </control>        
        <control>
          <type>button</type>
          <description>Update Sites</description>
          <id>13</id>
          <onright>50</onright>
          <onup>12</onup>
          <ondown>2</ondown>
          <label>#OnlineVideos.Translation.ManageSites.Label</label>          
          <height>28</height>
          <textYOff>3</textYOff>
          <hyperlink>4757</hyperlink>
          <visible>!Control.HasFocus(50)</visible>
        </control>                     
      </control>
    </control>
  </controls>
</window>