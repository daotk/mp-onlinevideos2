<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <controls>
    <control>
      <description>group element</description>
      <type>group</type>
      <visible>!Control.HasFocus(50)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="slide" time="150" start="0,-300">WindowOpen</animation>
      <animation effect="slide" time="250" end="800,0">WindowClose</animation>
      <animation effect="rotatey" start="20" end="0" center="525,0" tween="back" ease="easeout" time="500" reversible="false">hidden</animation>
      <animation effect="rotatey" start="0" end="20" center="525,0"  tween="back" ease="easeout" time="500" reversible="false">visible</animation>
      <control>
        <description>composite control consisting of a list control and a thumbnail panel</description>
        <type>facadeview</type>
        <id>50</id>
        <control>
          <description>listcontrol</description>
          <type>listcontrol</type>
          <id>50</id>
          <posX>50</posX>
          <width>620</width>
          <posY>70</posY>
          <height>400</height>
          <onleft>2</onleft>
          <onright>2</onright>          
          <spinPosX>660</spinPosX>
          <spinPoxY>565</spinPoxY>          
          <scrollOffset>2</scrollOffset>
          <font2>font10</font2>
          <textYOff2>6</textYOff2>          
        </control>
        <control>
          <description>Thumbnail Panel</description>
          <type>thumbnailpanel</type>
          <id>50</id>
          <posX>50</posX>
          <width>620</width>
          <posY>70</posY>
          <height>400</height>
          <scrollOffset>1</scrollOffset>
          <onleft>2</onleft>
          <onright>50</onright>
          <imageFolderFocus>OnlineVideos/thumbborder2.png</imageFolderFocus>
          <frameNoFocus>Picture_cover.png</frameNoFocus>
          <frameFocus>OnlineVideos/Picture_cover_focused.png</frameFocus>          

          <!-- smallicons -->
          <itemWidth>103</itemWidth>
          <itemHeight>87</itemHeight>          
          <textureWidth>101</textureWidth>
          <textureHeight>85</textureHeight>          
          <thumbWidth>95</thumbWidth>
          <thumbHeight>79</thumbHeight>          
          <thumbPosX>2</thumbPosX>
          <thumbPosY>2</thumbPosY>

          <!-- largeicons -->
          <itemWidthBig>123</itemWidthBig>
          <itemHeightBig>117</itemHeightBig>          
          <textureWidthBig>119</textureWidthBig>
          <textureHeightBig>113</textureHeightBig>          
          <thumbWidthBig>111</thumbWidthBig>
          <thumbHeightBig>103</thumbHeightBig>          
          <thumbPosXBig>4</thumbPosXBig>
          <thumbPosYBig>5</thumbPosYBig>
          
          <spinCanFocus>no</spinCanFocus>
          <spinPosX>1180</spinPosX>
          <spinPoxY>680</spinPoxY>

          <thumbZoom>no</thumbZoom>
          <enableFocusZoom>no</enableFocusZoom>
          <hideUnfocusTexture>no</hideUnfocusTexture>
          <renderFocusText>no</renderFocusText>
          <renderUnfocusText>no</renderUnfocusText>
        </control>        
      </control>
    </control>
  </controls>
</window>