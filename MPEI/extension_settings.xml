<extension_settings>
  <disable_entry>
		<setting entryname="plugins" name="OnlineVideos" displayname="Plugin Enabled" defaultvalue="yes" type="string" listvalues="yes|no" displaylistvalues="Yes|No"/> 
	</disable_entry>
	
	<settings section="General">
    <setting entryname="plugins" name="OnlineVideos" type="string" defaultvalue="yes" listvalues="yes|no" 
      displayname="#OnlineVideos.Translation.Settings_PluginEnabled.Label"
      description="You can enable or disable the OnlineVideos plugin, so MediaPortal will not load it on startup."
      displaylistvalues="#OnlineVideos.Translation.Settings_Yes.Label|#OnlineVideos.Translation.Settings_No.Label"/> 
    
    <setting entryname="onlinevideos" name="basicHomeScreenName" type="string" defaultvalue="Online Videos" 
      displayname="#OnlineVideos.Translation.Settings_BasicHomeName.Label" 
      description="This name will appear on the Basic Home screen menu entry that links to OnlineVideos."/>
    
    <setting entryname="home" name="OnlineVideos" type="string" defaultvalue="yes" listvalues="yes|no"
      displayname="#OnlineVideos.Translation.Settings_ListedInHome.Label"
      description="Set to yes if you want to see OnlineVideos in the classic home screen menu."
      displaylistvalues="#OnlineVideos.Translation.Settings_Yes.Label|#OnlineVideos.Translation.Settings_No.Label"/> 
    
    <setting entryname="myplugins" name="OnlineVideos" type="string" defaultvalue="no" listvalues="yes|no"
      displayname="#OnlineVideos.Translation.Settings_ListedInPlugins.Label" 
      description="Set to yes if you want to see OnlineVideos in the plugins submenu of the classic home screen."
      displaylistvalues="#OnlineVideos.Translation.Settings_Yes.Label|#OnlineVideos.Translation.Settings_No.Label"/>
  </settings>
  
  <settings section="GUI">
    <setting entryname="onlinevideos" name="autoGroupByLang" type="string" defaultvalue="yes" listvalues="yes|no"
      displayname="#OnlineVideos.Translation.Settings_AutoGroupByLang.Label" 
      displaylistvalues="#OnlineVideos.Translation.Settings_Yes.Label|#OnlineVideos.Translation.Settings_No.Label"/> 

    <setting entryname="onlinevideos" name="favoritesFirst" type="string" defaultvalue="no" listvalues="yes|no" 
      displayname="#OnlineVideos.Translation.Settings_FavoritesFirst.Label" 
      displaylistvalues="#OnlineVideos.Translation.Settings_Yes.Label|#OnlineVideos.Translation.Settings_No.Label"/>
    
    <setting entryname="onlinevideos" name="useQuickSelect" type="string" defaultvalue="no" listvalues="yes|no"
      displayname="#OnlineVideos.Translation.Settings_UseQuickSelect.Label"
      displaylistvalues="#OnlineVideos.Translation.Settings_Yes.Label|#OnlineVideos.Translation.Settings_No.Label"/>
      
    <setting entryname="onlinevideos" name="storeLayoutPerCategory" type="string" defaultvalue="yes" listvalues="yes|no"
      displayname="#OnlineVideos.Translation.Settings_StoreLayoutPerCategory.Label"
      displaylistvalues="#OnlineVideos.Translation.Settings_Yes.Label|#OnlineVideos.Translation.Settings_No.Label"/>
      
    <setting entryname="onlinevideos" name="searchHistoryType" type="int" defaultvalue="1" listvalues="0|1|2"
      displayname="#OnlineVideos.Translation.Settings_SearchHistoryType.Label"
      displaylistvalues="#OnlineVideos.Translation.Settings_SearchHistoryType_Off.Label|#OnlineVideos.Translation.Settings_SearchHistoryType_Simple.Label|#OnlineVideos.Translation.Settings_SearchHistoryType_Extended.Label"/>
  </settings>
  
  <settings section="Timeouts">
    <setting entryname="onlinevideos" name="thumbAge" type="int" defaultvalue="100" minvalue="-1" maxvalue="365"
      displayname="#OnlineVideos.Translation.Settings_ThumbAge.Label"
      description="-1 keeps all thumbs forever, 0 does not save them to the harddrive."/>
      
    <setting entryname="onlinevideos" name="cacheTimeout" type="int" defaultvalue="30" minvalue="0" maxvalue="300"
      displayname="#OnlineVideos.Translation.Settings_CacheTimeout.Label"
      description="Set to 0 to disable caching of webdata."/>
    
    <setting entryname="onlinevideos" name="categoryDiscoveryTimeout" type="int" defaultvalue="300" minvalue="30" maxvalue="2880"
      displayname="#OnlineVideos.Translation.Settings_CategoryDiscoveryTimeout.Label"/>
      
    <setting entryname="onlinevideos" name="utilTimeout" type="int" defaultvalue="15" minvalue="5" maxvalue="120"
      displayname="#OnlineVideos.Translation.Settings_UtilTimeout.Label"/>
  </settings>
      
  <settings section="Playback">
    <setting entryname="onlinevideos" name="wmpbuffer" type="int" defaultvalue="5000" minvalue="0" maxvalue="60000"
      displayname="#OnlineVideos.Translation.Settings_WmpBuffer.Label" />
      
    <setting entryname="onlinevideos" name="playbuffer" type="int" defaultvalue="2" minvalue="1" maxvalue="20"
      displayname="#OnlineVideos.Translation.Settings_PlayBuffer.Label"/>
    
    <setting entryname="onlinevideos" name="allowRefreshRateChange" type="string" defaultvalue="no" listvalues="yes|no" 
      displayname="#OnlineVideos.Translation.Settings_AllowRefreshrateChange.Label" 
      displaylistvalues="#OnlineVideos.Translation.Settings_Yes.Label|#OnlineVideos.Translation.Settings_No.Label"/>      
  </settings>
  
  <settings section="Latest Videos">
    <setting entryname="onlinevideos" name="latestVideosMaxItems" type="int" defaultvalue="3" minvalue="0" maxvalue="20"
      displayname="#OnlineVideos.Translation.Settings_LatestVideosMaxItems.Label"
      description="Set to 0 to disable" />
  
    <setting entryname="onlinevideos" name="latestVideosRandomize" type="string" defaultvalue="yes" listvalues="yes|no" 
      displayname="#OnlineVideos.Translation.Settings_LatestVideosRandomize.Label" 
      displaylistvalues="#OnlineVideos.Translation.Settings_Yes.Label|#OnlineVideos.Translation.Settings_No.Label"/>
      
    <setting entryname="onlinevideos" name="latestVideosOnlineDataRefresh" type="int" defaultvalue="30" minvalue="1"
      displayname="#OnlineVideos.Translation.Settings_LatestVideosOnlineDataRefresh.Label" />
      
    <setting entryname="onlinevideos" name="latestVideosGuiDataRefresh" type="int" defaultvalue="30" minvalue="5"
      displayname="#OnlineVideos.Translation.Settings_LatestVideosGuiDataRefresh.Label" />
  </settings>
</extension_settings>