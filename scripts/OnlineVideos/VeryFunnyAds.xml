<?xml version="1.0" encoding="utf-8" ?>
<ScriptableScraper>
  <details>
    <!-- These details are for display purposes only. -->
    <name>VeryFunnyAds Script scraper</name>
    <author>Duka Istvan (dukus)</author>
    <description>This script is use for testing the script egine.</description>
    
    <!-- 
    These fields uniquely identify the script. The ID should never 
    change and should be unique (no other script should use this ID). With
    new versions of the script the version numbers should change. EVEN FOR 
    MINOR CHANGES, you should change the version number if you are going to
    disribute it to anyone but internal testers. The point number 
    is for minor bug fix releases. Use it.
    -->
    <id>422197</id>
    <version major="1" minor="0" point="0"/>
    <published month="3" day="06" year="2010"/>
    
    <!--
    These fields are used for categorization purposes. Seperate multiple 
    types with a pipe | character.
    -->
    <type>SiteScraper</type>
    <language>en</language>
    <agecheck>false</agecheck>
   </details>
  
  
  <action name="get_categories">
	
	<set name="offset" value="0" />
<!--     <set name="category[0].type" value="type0"/>
    <set name="category[0].name" value=" name0"/>
	<set name="category[0].url" value="url0"/>
	<set name="category[0].thumb" value="thumb0"/>
 -->
    <retrieve name="category_page" url="http://www.tbs.com/veryfunnyads/getCollections.do?id=26322" />
	<parse name="category_results_block" input="${category_page}" regex='&lt;collection\s+id=&apos;(?&lt;url&gt;\d{3,8})&apos;[^&gt;]*&gt;\s*&lt;name&gt;&lt;!\[CDATA\[(?&lt;title&gt;[^\]]+)\]\]&gt;&lt;/name&gt;'/>
    <loop name="category_result" on="category_results_block">	
		<add name="counter" value1="${count}" value2="${offset}" />
        <set name="category[${counter}].url" value="${category_result[0]:htmldecode}"/>
        <set name="category[${counter}].name" value="${category_result[1]:htmldecode}"/>	
	</loop>
  </action>

  <action name="get_videolist">
	<set name="offset" value="0" />
	
    <retrieve name="video_page" url="http://tbs.com/veryfunnyads/getCollectionById.do?offset=0&amp;id=${category.url}&amp;sort=&amp;limit=50&amp;daysback=" />
	
	<parse name="video_results_block" input="${video_page}" regex='&lt;episode.+?&lt;/episode&gt;'/>
    <loop name="video_result" on="video_results_block">
	     <add name="counter" value1="${count}" value2="${offset}" />
		 
		 <parse name="video_url" input="${video_result}" regex="&lt;segment\s+id=&apos;(?&lt;url&gt;\d{3,8})&apos;[^&gt;]*&gt;"/>
         <set name="video[${counter}].videourl" value="${video_url[0][0]}"/>

		 <parse name="video_thumb" input="${video_result}" regex="&lt;fullSizeStillUrl&gt;(?&lt;url&gt;.+?)&lt;/fullSizeStillUrl&gt;"/>
         <set name="video[${counter}].imageurl" value="${video_thumb[0][0]}"/>

		 <parse name="video_title" input="${video_result}" regex="&lt;title&gt;&lt;!\[CDATA\[(?&lt;title&gt;[^\]]+)\]\]&gt;&lt;/title&gt;"/>
         <set name="video[${counter}].title" value="${video_title[0][0]}"/>
		 
	</loop>
  
  </action>

  <action name="get_videourl">
	<retrieve name="video_page" url="http://www.tbs.com/veryfunnyads/getPlaylistById.do?id=${video.videourl}" />
	<parse name="video_url" input="${video_page}" regex="&lt;url&gt;(?&lt;m0&gt;[^&lt;]*)"/>
	<set name="videourl" value="${video_url[0][0]}"/>
  </action>

  <action name="search">
	
  </action>
  
  </ScriptableScraper>
