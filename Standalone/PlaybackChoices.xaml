<Window x:Class="Standalone.PlaybackChoices"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Playback Choices" WindowStartupLocation="CenterOwner" ShowInTaskbar="False"
        FocusManager.FocusedElement="{Binding ElementName=lvChoices}"
        WindowStyle="ToolWindow" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    
    <Window.Resources>

        <Style x:Key="itemstyle" TargetType="{x:Type ListViewItem}">
            <EventSetter Event="MouseDoubleClick" Handler="HandleDoubleClick" />
            <EventSetter Event="KeyUp" Handler="HandleKeyUp" />
        </Style>
        
    </Window.Resources>
    <Grid>
        <ListView Background="#FFE3F4FC" Padding="10" Name="lvChoices" ItemContainerStyle="{StaticResource itemstyle}"/>
    </Grid>
</Window>
