<Window x:Class="Standalone.PlaybackChoices"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Playback Choices" WindowStartupLocation="CenterOwner" ShowInTaskbar="False" Loaded="OnLoaded" Background="#DDE3F4FC" AllowsTransparency="True" Margin="10" BorderThickness="2" BorderBrush="Black"
        WindowStyle="None" SizeToContent="WidthAndHeight" ResizeMode="NoResize" FontSize="14">
    
    <Window.Resources>

        <Style x:Key="itemstyle" TargetType="{x:Type ListViewItem}">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="MinWidth" Value="100"/>
            <EventSetter Event="MouseDoubleClick" Handler="HandleDoubleClick" />
            <EventSetter Event="KeyUp" Handler="HandleKeyUp" />
        </Style>
        
    </Window.Resources>

    <Window.CommandBindings>
        <CommandBinding Command="Close" Executed="CloseCommandHandler"/>
    </Window.CommandBindings>
    
    <StackPanel>
        <Label Content="Playback Choices" FontWeight="Bold" HorizontalAlignment="Center"/>
        <ListView x:Name="lvChoices" SelectionMode="Single" Background="Transparent" ItemContainerStyle="{StaticResource itemstyle}" BorderThickness="0 1 0 1"/>
        <Button Command="Close" Width="50" Height="30" HorizontalAlignment="Right" Content="Cancel" Margin="0 5 5 5"/>
    </StackPanel>
</Window>
