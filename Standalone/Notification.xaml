<UserControl x:Class="Standalone.Notification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="150" Width="250" BorderThickness="2" BorderBrush="Black"
             Background="{StaticResource TransparentBackgroundColor}">
    <DockPanel>
        <Border BorderThickness="0 0 0 1" BorderBrush="Black" DockPanel.Dock="Top" >
            <TextBlock x:Name="tbxHeading" FontWeight="Bold" Text="Error" FontSize="14" Margin="5"/>
        </Border>
        <Button DockPanel.Dock="Bottom" Margin="0 0 5 5" HorizontalAlignment="Right" Content="OK" Width="50" Height="30" Click="Button_Click"/>
        <TextBlock x:Name="tbxMessage" TextWrapping="Wrap" Text="An error occurred during execution of the task." Margin="5 0 5 0" FontSize="14" DockPanel.Dock="Top" VerticalAlignment="Center"/>
    </DockPanel>
</UserControl>
